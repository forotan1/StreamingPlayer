<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNameu"
        android:hint="enter a iTitle"/>

    <EditText
        android:id="@+id/userAgeu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="paste a valid stream"
        android:layout_below="@+id/userNameu"
        />
    <EditText
        android:id="@+id/userOccupationu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="paste image link"
        android:layout_below="@+id/userAgeu"/>


    <EditText
        android:id="@+id/userProfileImageLinku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        android:hint="Occo"
        android:layout_below="@id/userOccupationu"/>


</RelativeLayout>